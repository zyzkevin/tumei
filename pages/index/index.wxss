
.container{
  height:100vh;
  width: 100%;
  background: rgb(255, 255, 255);
  display:flex;  
  flex-wrap: wrap;
  justify-content: space-around;
  align-content: space-around;
}

.image-parent {
  position: relative;
}
.image{
  border: 1px solid #ddd;
  padding: 5px;
  border-radius: 4px;
  width: 600 rpx;
  height: 350rpx; 
}

.child {
  width: 150px;
  height: 30px;  
  position: absolute;
  left: 0;
  top: 100px;
  right: 0;
  bottom: 0;
  margin: auto;
  text-align: center;
  color:white;
  font-size: 26px;
}  

.navigator-hover{
  opacity: 0.9;
  background: #f7f7f7;
}