/* pages/welcome/welcom.wxss */

page {
  background-color: #b3d4db;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
}

.user-avatar {
  width: 170rpx;
  height: 170rpx;
  margin-top: 160rpx;
  border-radius: 50%;
}

.user-name, .moto {
  color: #fff;
  font-weight: bold;
}

.user-name {
  font-size: 48rpx;
  margin-top: 100rpx;
}

.moto {
  margin-top: 200rpx;
  border: 1rpx solid #fff;
  width: 290rpx;
  height: 80rpx;
  border-radius: 5rpx;
  text-align: center;
  font-size: 26rpx;
  line-height: 80rpx;
  background-color: transparent;
}

.bg-img {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.copyright{
  position: absolute;
  text-align: center;
  bottom: 100rpx;
  font-size: 32rpx;
  color:#fff;
}