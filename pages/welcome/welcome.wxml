<!--pages/welcome/welcom.wxml-->
<view class="container">
  <image src="{{url}}" class="bg-img" mode="aspectFill"></image>
  <image src="{{avatarUrl}}" class="user-avatar" ></image>
  <text class="user-name">Hello, {{nickName}}</text>
  <button class="moto" bindtap="onTap">
    开启你的留学之路
  </button>
  <button open-type="getUserInfo" wx:if="{{isShow}}" bindgetuserinfo="bindGetUserInfo"></button>
  
  <text class="copyright">{{copyright}}</text>
</view>
