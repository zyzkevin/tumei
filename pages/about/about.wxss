.container {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 30rpx;
}
.share_button{
  z-index: 9999;
  border-radius: 50%;
  width: 90rpx;
  height: 90rpx;
}
.share_button::after {
  border: 0px;
}
.header-image {
  width: 100%;
  height: 460rpx;
}

.author-data {
  flex-direction: row;
  margin: 20rpx 0 0;
}

.author-image {
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
  border-radius: 50%;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin: 0 20rpx 0 20rpx;
  vertical-align: middle;
}

.date {
  font-size: 28rpx;
  color: #666;
  vertical-align: middle;
}

.title {
  margin: 30rpx 0 0;
  font-size: 42rpx;
  color: #222;
  letter-spacing: 6rpx;
  font-weight: bold;
}

.tool {
  margin-top: 20rpx;
  position: relative;
  z-index: 2;
}

.tool-line {
  position: absolute;
  top: 40%;
  width: 580rpx;
  height: 1px;
  background-color: #eee;
  z-index: -1;
}

.circle-image {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
  margin-bottom: 10rpx;
}

.circle-image image {
  width: 90rpx;
  height: 90rpx;
}


.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail {
  color: #666;
  margin: 20rpx 30rpx 0 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  text-indent: 2em;
}

.comments-container {
  display: flex;
  flex-direction: column;
}

.comment-container image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  vertical-align: middle;
}

.comment-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #eee;
  height:150rpx;
}
.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  padding-bottom: 5rpx;

}