    book{
        height: 10rem;
        width: 40%;
        background: #FFF;
        position: absolute;
        right:10%;
        top:400rpx;
        transform: rotateX(30deg);
    }

    /*每页的公共样式*/
    .book-page {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height:1000rpx;
        border: 1px solid #1976D2;
        text-align: center;
        background-color: #fff;
    }
    .book-page p{
        font-size: 120rpx;
        margin-top: 200rpx;
        color: #ff6300;
        backface-visibility:hidden;
    }
    /*首页样式*/
    .first-page{
        background-color: #1976D2;
    }
     
    /*动画部分*/
    /*I'm the home page动画*/
    .flip-animation-start {
        animation: flipBook1 3s forwards;
    }
    .flip-animation-end {
        animation: flipBook2 3s forwards;
    }
    @keyframes flipBook1 {
        0% {
            transform: rotateY(0deg);
        }
        100% {
            transform: rotateY(-160deg);
        }
    }
    /*关闭书页*/
    @keyframes flipBook2 {
        0% {
            transform: rotateY(-160deg);
        }
        100% {
            transform: rotateY(0deg);
        }
    }